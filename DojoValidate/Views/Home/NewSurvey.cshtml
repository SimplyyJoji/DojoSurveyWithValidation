<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
</head>
<body>
<div>
<h1>New Survey</h1>
@model Survey
<form asp-action="Create" asp-controller="Home" method="post">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input asp-for="Name">
    <span asp-validation-for="Location"></span>
    <label asp-for="Location"></label>
    <select asp-for="Location">
      <option value="San Jose">San Jose</option>
      <option value="San Francisco">San Francisco</option>
      <option value="Bellvue">Bellvue</option>
      <option value="Irvine">Irvine</option>
    </select>
    <span asp-validation-for="Language"></span>
    <label asp-for="Language"></label>
    <select asp-for="Language">
      <option value="C#">C#</option>
        <option value="React">React</option>
        <option value="Python">Python</option>
        <option value="Java">Java</option>
    </select>
    <span asp-validation-for="Comments"></span>
    <label asp-for="Comments"></label>
    <textarea asp-for="Comments" rows="4" cols="50" maxlength="200"></textarea>
    <input value="Add User" type="submit">    
</form>
</div>
</body>
</html>